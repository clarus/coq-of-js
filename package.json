{
  "name": "coq-of-js",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "gh-pages": "^2.1.1",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "coverage": "react-scripts test --coverage --collect-coverage-from=src/compiler/**/*.js src/compiler",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "flow": "flow",
    "predeploy": "npm run build",
    "prettier-check": "prettier --check src/**/*.{js,json}",
    "prettier": "prettier --write src/**/*.{js,json}",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "bracketSpacing": false,
    "trailingComma": "all"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "flow-bin": "^0.105.2",
    "flow-typed": "^2.6.1"
  },
  "homepage": "https://clarus.github.io/coq-of-js"
}
